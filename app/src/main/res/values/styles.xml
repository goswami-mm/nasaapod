<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme"
              tools:ignore="NewApi">@style/DatePickerDialogStyle
        </item>
    </style>

    <style name="apodtextsytle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="apodtextsytle.bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="apodtextsytle.grey">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="DatePickerDialogStyle"
           parent="android:Theme.Material.Light.Dialog"
           tools:ignore="NewApi">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
</resources>
